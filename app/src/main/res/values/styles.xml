<resources>
    <color name="kindness_colorPrimary">#8BC34A</color>
    <color name="kindness_colorPrimaryDark">#689F38</color>
    <color name="kindness_colorAccent">#448AFF</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/kindness_colorPrimary</item>
        <item name="colorPrimaryDark">@color/kindness_colorPrimaryDark</item>
        <item name="colorAccent">@color/kindness_colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
