<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kindnes.roxanajula.kindnes.ProfileActivity">

        <ImageView
            android:layout_width="409dp"
            android:layout_height="581dp"
            app:srcCompat="@drawable/profile"
            android:layout_toStartOf="@+id/userTitleProfile"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:paddingBottom="60dp"
            android:paddingLeft="-25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/userNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="User name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="5dp"
            android:textColor="?android:attr/textColorPrimaryInverse" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userPhotoProfile"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFF"
            android:paddingTop="20dp"
            android:layout_height="140dp"
            android:layout_width="140dp"
            android:layout_below="@+id/userTitleProfile"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/userTitleProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Philanthropy Master"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:layout_below="@+id/userNameProfile"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
