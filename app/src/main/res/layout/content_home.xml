<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kindnes.roxanajula.kindnes.HomeActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <Button
        android:text="Volunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volunteerButton"
        android:minHeight="130dp" />

    <Button
        android:text="Donate Money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/moneyButton"
        android:minHeight="130dp" />

    <Button
        android:text="Give out clothes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clothesButton"
        android:onClick="goToClothesView"
        android:minHeight="130dp" />

    <Button
        android:text="Help with food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/foodButton"
        android:onClick="goToFoodView"
        android:minHeight="130dp" />
</LinearLayout>
